<div id="app" class="bg-light p-2" style="--bs-bg-opacity: .2;">
<h2 align="center">
<div class="alert alert-success" role="alert">
Registrarse
</h2>
</div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-4">
        {{#if message}}
        <div class="alert {{messageClass}}">
            {{message}}
        </div>
        {{/if}}

        <form action="/register" method="POST">
        <div class="form-group">
            FullName:
            <input type="text" name="fullName" id="" class="form-control"><br>
            </div>

        <div class="form-group">
            Email:
            <input type="text" name="email" id="" class="form-control"><br>
            </div>

        <div class="form-group">
            Password:
            <input type="password" name="password" id="" class="form-control"><br>
            </div>

        <div class="form-group">
            Confirm password:
            <input type="password" name="confirmPassword" id="" class="form-control"><br>
            </div>
             <div class="col-12 text-center">
            <button type="submit" class="btn btn-success">Registrarse</button>
        </form>
    </div>
</div>
</div>